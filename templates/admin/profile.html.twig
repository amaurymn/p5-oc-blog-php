{% extends 'admin/base.html.twig' %}

{% block content %}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-0">
        <div class="pt-3 pb-5 container px-0">
            <h1 class="no-underline ml-3">Profil</h1>
            <div class="d-flex flex-wrap">
                <div class="col-lg-12 mb-2">
                    <div class="card shadow">
                        <div class="card-header">
                            Mes infos
                        </div>
                        <div class="col-12 card-body">
                            <form method="post">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label for="profilFirstname" id="currEmail">Nom</label>
                                        <input id="profilFirstname" type="text" class="form-control" name="firstName" maxlength="50" value="{{ user.first_name }}" required>
                                    </div>
                                    <div class="col-lg-4">
                                        <label for="profilLastname" id="currEmail">Prénom</label>
                                        <input id="profilLastname" type="text" class="form-control" name="lastName" maxlength="50" value="{{ user.last_name }}" required>
                                    </div>
                                    <div class="col-lg-3">
                                        <label for="profilUsername" id="currEmail">Nom d'utilisateur</label>
                                        <input id="profilUsername" type="text" class="form-control" name="userName" maxlength="50" value="{{ user.user_name }}" required>
                                    </div>
                                    <div class="col mt-4">
                                        <button class="btn btn-outline-primary" name="saveInfos"><i class="fas fa-save"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="card shadow mt-3">
                        <div class="card-header">
                            Mon adresse email
                        </div>
                        <div class="col-12 card-body">
                            <form method="post">
                                <div class="row">
                                    <div class="col-11">
                                        <label for="profilEmail" id="currEmail">Email</label>
                                        <input id="profilEmail" type="email" class="form-control" name="email" maxlength="255" value="{{ user.email }}" required>
                                    </div>
                                    <div class="col mt-4">
                                        <button class="btn btn-outline-primary" name="saveEmail"><i class="fas fa-save"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="card shadow mt-3">
                        <div class="card-header">
                            Changer mon mot de passe
                        </div>
                        <div class="col-12 card-body">
                            <form method="post">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label for="profilename" id="currEmail">Mot de passe</label>
                                        <input id="profilename" type="password" class="form-control" name="password" maxlength="255" placeholder="*****" required>
                                    </div>
                                    <div class="col-lg-5">
                                        <label for="profilesurname" id="currEmail">Retapez le mot de passe</label>
                                        <input id="profilesurname" type="password" class="form-control" name="rpassword" maxlength="255" placeholder="*****" required>
                                    </div>
                                    <div class="col mt-4">
                                        <button class="btn btn-outline-primary" name="savePassword"><i class="fas fa-save"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                {% if user.role == 'admin' %}
                    <div class="col-lg-12 mb-2">
                        <div class="card shadow">
                            <div class="card-header">
                                Image Admin
                            </div>
                            <div class="col-12 card-body">
                                <form method="post" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-lg-11">
                                            <label class="label" for="inputImgUrl">Image</label>
                                            <input class="form-control" name="image" id="inputImgUrl" type="file">
                                        </div>
                                        <div class="col mt-4">
                                            <button class="btn btn-outline-primary" name="saveImageAdmin"><i class="fas fa-save"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 mb-2">
                        <div class="card shadow">
                            <div class="card-header">
                                Infos Admin
                            </div>
                            <div class="col-12 card-body">
                                <form method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <label class="label" for="inputAltImg">Image Alt</label>
                                            <input class="form-control" name="altImg" id="inputAltImg" type="text" maxlength="255maxlength=" 50" " value="{{ user.alt_img }}" required>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-lg-11">
                                            <label class="label" for="inputShortDescription">A propos de moi</label>
                                            <textarea class="form-control" name="shortDescription" id="inputShortDescription" rows="2" maxlength="500" required>{{ user.short_description }}</textarea>
                                        </div>
                                        <div class="col mt-4">
                                            <button class="btn btn-outline-primary" name="saveInfosAdmin"><i class="fas fa-save"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 mb-2">
                        <div class="card shadow">
                            <div class="card-header">
                                CV
                            </div>
                            <div class="col-12 card-body">
                                <form method="post" enctype="multipart/form-data">
                                    <div class="row mt-2">
                                        <div class="col-lg-11">
                                            <label class="label" for="inputCvLink">CV Link</label>
                                            <input type="file" id="inputCvLink" name="cvLink" class="form-control" accept="application/pdf" required>
                                        </div>
                                        <div class="col mt-4">
                                            <button class="btn btn-outline-primary" name="saveInfosCv"><i class="fas fa-save"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12" id="sociaNetworks">
                        <div class="card shadow">
                            <div class="card-header">
                                Réseaux sociaux
                            </div>
                            <div class="card-body">
                                <form method="post">
                                    <div class="row">
                                        <div class="col-lg-1 px-0 text-center mt-1">
                                            <i class="fas fa-share-alt"></i>
                                        </div>
                                        <div class="col-lg-3 px-lg-0">
                                            <input type="text" class="form-control" name="name" placeholder="Nom" required>
                                        </div>
                                        <div class="col-lg-2">
                                            <input type="text" class="form-control" name="icon" placeholder="fas fa-share-alt" required>
                                        </div>
                                        <div class="col-lg-5 px-lg-0">
                                            <input type="text" class="form-control" name="url" placeholder="https://" required>
                                        </div>
                                        <div class="col-lg-1">
                                            <button type="submit" class="form-control btn btn-outline-primary" name="saveNetwork">
                                                <i class="fas fa-save"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                                <hr>
                                {% for item in socialNetwork %}
                                    <div class="row mb-3">
                                        <div class="col-lg-1 px-0 text-center">
                                            <i class="{{ item.icon }}"></i>
                                        </div>
                                        <div class="col-lg-3 px-lg-0">
                                            <input type="text" class="form-control" value="{{ item.name }}" disabled>
                                        </div>
                                        <div class="col-lg-2 py-md-1 py-lg-0">
                                            <input type="text" class="form-control" value="{{ item.icon }}" disabled>
                                        </div>
                                        <div class="col-lg-5 px-lg-0">
                                            <input type="text" class="form-control" value="{{ item.url }}" disabled>
                                        </div>
                                        <div class="col-lg-1">
                                            <a href="/dashboard/profil/network/{{ item.id }}/delete" class="form-control btn btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}
