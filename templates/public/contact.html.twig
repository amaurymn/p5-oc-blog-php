{% extends 'public/base.html.twig' %}

{% block content %}
    <main>
        <div class="container section negative-margin">
            <div class="row">
                <div class="col-sm-12">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2623.8737382034974!2d2.306766316035147!3d48.8796834792896!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66fbe98f714c3%3A0xe62425fddeddc402!2sParc%20Monceau!5e0!3m2!1sfr!2sfr!4v1581725678959!5m2!1sfr!2sfr" style="width:100%; border: 0;" height="450" allowfullscreen=""></iframe>
                </div>
            </div>
        </div>

        <div class="container section negative-margin contact my-3">
            <div class="row mt-4">
                <div class="col-md-12">
                    <h2>Contactez moi</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <form method="post">
                        <div class="form-group m-0">
                            <label for="nom">Nom/Prénom *</label>
                            <input type="text" id="nom" name="nom" value="{{ post.nom }}">
                        </div>
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input type="email" id="email" name="email" value="{{ post.email }}">
                        </div>
                        <div class="form-group">
                            <label for="subject">Sujet *</label>
                            <input type="text" id="subject" name="subject" value="{{ post.subject }}">
                        </div>
                        <div class="form-group">
                            <label for="message">Message *</label>
                            <textarea rows="5" id="message" name="message">{{ post.message }}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-default" type="submit" name="submit">Envoyer</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-4 my-3 text-muted">
                    <div class="col">
                        <p class="h5"><i class="fas fa-map-marked-alt"></i> Address</p>
                        <p>35 Boulevard de Courcelles, 75008 Paris</p>
                    </div>
                    <div class="col">
                        <p class="h5"><i class="fas fa-phone"></i> Téléphone</p>
                        <p>+33 6 06 06 06 06</p>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
