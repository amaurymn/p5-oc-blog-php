{% extends 'public/base.html.twig' %}

{% block content %}
    <main class="d-flex flex-column justify-content-center">
        <div class="container form-login">
            <div class="d-flex justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <h1>Connexion</h1>
                    <form method="post">
                        <div class="form-group">
                            <label class="label" for="inputEmail">Email</label>
                            <input id="inputEmail" name="email" type="email" required>
                        </div>

                        <div class="form-group">
                            <label class="label" for="inputPassword">Mot de passe</label>
                            <input id="inputPassword" name="password" type="password" required>
                        </div>

                        <div class="form-group d-flex justify-content-center">
                            <button type="submit" name="login" class="btn btn-default">Connexion</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
